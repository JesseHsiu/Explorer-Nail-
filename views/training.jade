extends layout

block content
	link(rel='stylesheet', href='/stylesheets/c3.min.css')
	link(href='./stylesheets/animations.css', rel='stylesheet')
	script(src='./javascripts/c3.min.js')
	.jumbotron
		h2 Learning
		br
		button#recordBtn.btn.btn-primary(type='button', onclick="recordBtnClick()") Start Record
		button#clearBtn.btn.btn-warning(type='button', onclick="deleteLastOne()") Delete Last One
		button#clearBtn.btn.btn-danger(type='button', onclick="cleanBtnClick()") Clean All Data
		button#clearBtn.btn.btn-success(type='button', onclick="trainByTheData()") Train Data
		br
		br
		div#doneNotification
			.alert.alert-success(role='alert')
				p Training Done
		
		h3(id="nameOfGesture")
		h4 Type And Count
			#Type
			#Round
		//- div(style="margin-top: 500px")
		div(class="row")
			div(class="col-md-6")
				div(id="instruct",style="text-align: center; margin-top: 35px;position: relative;")
					div(id="instructionAnimation", style="background-color: green;margin-left: 50%; margin-top: 200px;")
			div(class="col-md-6")
				h4 Status
					#chart
		script(src='./javascripts/learning_client.js')